<%= render "devise/shared/header" %>
<main class="mt-3">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
   
    <%= f.email_field :email, autofocus: true, placeholder: 'email', autocomplete: "Email", class: 'w-100 custom-field-height form-control' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'w-100 custom-field-height form-control' %>
  </div>

  <div class="actions bg-info">
    <%= f.submit "Log in", class: 'bg-info actions-btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</main>