<section class="container mt-3">
  <div class="row">
    <div class="col-12">
      <%= form_with(model: @category, url: categories_path, method: :post, local: true, class: "form") do |form| %>
        <div class="field">
          <%= form.text_field :name, placeholder: 'Name', class: 'w-100 custom-field-height form-control' %>
        </div>

        <div class="field mt-2">
          <%= form.label :icon, class: 'h5' %><br>
          <%= form.file_field :icon, class: 'w-100 custom-field-height form-control' %>
        </div>

        <div class="action d-flex justify-content-center mt-4">
          <%= form.submit "Create Category", class: 'btn btn-info text-white' %>
        </div>
      <% end %>
    </div>
  </div>
</section>
