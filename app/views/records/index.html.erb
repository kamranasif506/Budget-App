
<main class="container">
    <div class="border my-2 p-3">
        <div class="row">
            <div class="col-9 m-auto">
                <p class="font-medium text-gray-500 text-xl m-auto">Totak Transaction</p>
            </div>
            <div class="col-3 text-center m-auto">
                <p class="text-center font-bold text-xl  m-auto">$1000 </p>
            </div>
        </div>
    </div>
    
    <% @records.each do |record| %>
        
        <div class="categories-container border mb-2 p-2">
    
            <div class="row category-box">
                <div class="col-9 text-center m-auto">
                    <div class="record-name">
                        <!-- You can use an image tag or an icon font here -->
                        <h3 class="category-name"><%= record.name %></h3>
                    </div>    
                </div>
                <div class="col-3 text-center m-auto">
                    <div class="category-amount fw-bold m-auto">
                        <%= number_to_currency(record.amount, unit: "$", precision: 2) %> 
                    </div>
                </div>
                <div class="col-12 text-center m-auto">
                    <h3 class="category-name"><%= record.created_at %></h3>    
                </div>
            </div>

        
        </div>
    <% end %>
</main>
<footer class="fixed-bottom bg-info">
    <div class="container pb-3">
        <div class="row">
            <div class="col-12 mt-3">
                <%= button_to "Add New Record", new_category_record_path(@category), class: "btn btn-info w-100 text-white border-white", method: :get %> 
            </div>
        </div>
    </div>
</footer>
